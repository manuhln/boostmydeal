modules = ["python-3.11", "python3", "nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["alsa-lib", "bash", "cargo", "ffmpeg", "libiconv", "libsndfile", "libxcrypt", "portaudio", "pulseaudio", "rustc", "valkey"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "webview"

